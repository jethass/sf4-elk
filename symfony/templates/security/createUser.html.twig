{% extends 'base_admin.html.twig' %}
 {% block body %}

     <div class="d-sm-flex align-items-center justify-content-between mb-4">
         <h1 class="h3 mb-0 text-gray-800">Ajouter Un User</h1>
     </div>

     <div class="row">
         <div class="col-lg-12">
             <div class="row">
                 <div class="col-sm-12">
                     {% for flash_message in app.session.flashbag.get('success') %}
                         <div class="alert alert-success" role="alert">
                             {{ flash_message }}
                         </div>
                     {% endfor %}
                 </div>
             </div>
             <div class="form-group row">
                 {{ form_start(form) }}

                 <div class="col-sm-12">email :</div>
                 <div class="col-sm-12">
                     {{ form_errors(form.email) }}
                     {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-user'} }) }}
                 </div>

                 <div class="col-sm-12">password :</div>
                 <div class="col-sm-12">
                     {{ form_errors(form.password) }}
                     {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-user'} }) }}
                 </div>

                 <div class="col-sm-12">Role :</div>
                 <div class="col-sm-12">
                     {{ form_errors(form.roles) }}
                     {{ form_widget(form.roles, {'attr': {'class': 'form-control form-control-user'} }) }}
                 </div>

                 <div class="col-sm-8">
                     </br>

                 {% if id is not null %}
                     <input type="submit" value="Modifier" class="btn btn-primary btn-user btn-block"/>
                 {% else %}
                     <input type="submit" value="Ajouter" class="btn btn-primary btn-user btn-block"/>
                 {% endif %}
                 </div>

                 {{ form_end(form) }}
             </div>
         </div>
     </div>
 {% endblock %}
