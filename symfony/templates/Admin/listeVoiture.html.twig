{% extends 'base_admin.html.twig' %}
 {% block body %}

     <div class="d-sm-flex align-items-center justify-content-between mb-4">
         <h1 class="h3 mb-0 text-gray-800">Liste des Voitures</h1>
     </div>

     <div class="card shadow mb-4">
         <div class="card-body">
             <div class="table-responsive">
                 <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                     <thead>
                     <tr>
                         <th>Photo</th>
                         <th>Nom de Marque</th>
                         <th>Nom de Modele</th>
                         <th>date mise en Circulation</th>
                         <th>Prix</th>
                         <th>Action</th>
                     </tr>
                     </thead>
                     <tbody>
                     {% for voiture in voitures %}
                         <tr>
                             <td>
                                 <img width="100" src="/uploads/photos/{{ voiture.images[0].id }}.{{ voiture.images[0].extension }}" />
                             </td>
                             <td>{{ voiture.marque.label }}</td>
                             <td>{{ voiture.modele.label }}</td>
                             <td>{{ voiture.dateCirculation|date('Y-m-d') }}</td>
                             <td>{{ voiture.prix }}â‚¬</td>
                             <td>
                                 <a href="{{ path('edit_voiture', {'id' : voiture.id }) }}" class="btn btn-success btn-icon-split"><span class="text">Editer</span></a>
                                 <a href="{{ path('delete_voiture', {'id' : voiture.id }) }}" class="btn btn-danger btn-icon-split"><span class="text">Supprimer</span></a>
                             </td>
                         </tr>
                     {% endfor %}
                     </tbody>
                 </table>
             </div>
         </div>
     </div>

 {% endblock %}

